pipeline {
    agent any
   tools {
        // Specify the Maven version to be used if needed
        maven 'Maven_3.6.3' // Replace with your Maven tool name
    }

    triggers {
        githubPush() // Trigger the pipeline using GitHub webhook
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Fetch the repository using the default SCM configuration
                checkout scm
            }
        }

        stage('Print Commit Message') {
            steps {
                script {
                    // Get the latest commit message
                    def commitMessage = sh(
                        script: "git log -1 --pretty=%B",
                        returnStdout: true
                    ).trim()
                    echo "Commit Message: ${commitMessage}"
                }
            }
        }
    }
}


   

    

