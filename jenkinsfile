pipeline {
    agent any

    tools {
        // Specify the Maven version to be used if needed
        maven 'Apache Maven 3.6.3' // Replace with your Maven tool name
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    // Use pom.xml for SCM configuration
                    def scmVars = checkout(scm: [$class: 'PomScmProvider'])
                    echo "Checked out code from ${scmVars.GIT_URL} at branch ${scmVars.GIT_BRANCH}"
                }
            }
        }
        stage('Print Branch Name') {
            steps {
                script {
                    echo "Current Branch: ${env.GIT_BRANCH ?: 'Branch info not available'}"
                }
            }
        }
    }
}

